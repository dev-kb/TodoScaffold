@model TodoApp.Models.Note

@* This partial view defines form fields that will appear when creating and editing entities *@

@Html.HiddenFor(model => mbox.CreatedOn)

<div class="editor-label">
    @Html.LabelFor(model => model.Description)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Description)
    @Html.ValidationMessageFor(model => model.Description)
</div>

<div class="editor-label">
    Task
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.TaskId, ((IEnumerable<TodoApp.Models.Task>)ViewBag.PossibleTasks).Select(option => new SelectListItem {
        Text = (option == null ? "None" : option.Name), 
        Value = option.TaskId.ToString(),
        Selected = (Model != null) && (option.TaskId == Model.TaskId)
    }), "Choose...")
    @Html.ValidationMessageFor(model => model.TaskId)
</div>
